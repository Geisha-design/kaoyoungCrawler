{
  "manifest_version": 3,
  "name": "爬虫助手",
  "version": "1.0.0",
  "description": "浏览器爬虫助手客户端，与后端服务通过WebSocket通信",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/fingerprintjs2.min.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "爬虫助手"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["task-manager.html", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}